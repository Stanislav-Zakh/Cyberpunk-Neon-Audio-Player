<UserControl x:Class="Audio_Player_NightWalk.ImageManager"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Audio_Player_NightWalk"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Template>

        <ControlTemplate>

            <Border Margin="0 15 0 15" Padding="5" CornerRadius="10" Background="Beige" Grid.Column="0">
                <DockPanel>
                    
                    <StackPanel DockPanel.Dock="Top" Orientation="Horizontal">
                        
                    </StackPanel>



                    <Button DockPanel.Dock="Top" Command="{Binding AddArtWorks}" Margin="0 0 10 0" Style="{StaticResource ArtAddButton}" Grid.Column="0" />

                        
                    

                    <ContentPresenter Content="{Binding Content, RelativeSource={RelativeSource Mode=TemplatedParent}}" DockPanel.Dock="Top"/>

                </DockPanel>
            </Border>

        </ControlTemplate>

    </UserControl.Template>
</UserControl>
