<Page x:Class="Audio_Player_NightWalk.ImageViewer"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Audio_Player_NightWalk"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ImageViewer">


    <Grid >
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="Black">

            

        </Border>


        <Border Padding="20" Grid.Row="1" Background="{StaticResource StormyNightBrush}" BorderThickness="3 3 3 0" BorderBrush="{StaticResource StealGradient}">

            <Viewbox>
                <Border BorderThickness="5" BorderBrush="#88333333">
                    <Image Source="{Binding Cover}"/>
                  
                </Border>
            </Viewbox>

        </Border>

    </Grid>
</Page>
